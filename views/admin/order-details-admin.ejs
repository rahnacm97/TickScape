<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
</head>
<body>
  <h1>Order Details for Order ID: <%= orderId %></h1>
  
  <div>
    <h3>Product Details</h3>
    <table>
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% orders.product.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price * product.quantity %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h3>Order Summary</h3>
    <p>Total Price: <%= finalAmount %></p>
    <p>Discount: <%= discount %></p>
    <p>Final Amount: <%= finalAmount %></p>
  </div>

  <a href="/admin/orderList">Back to Order List</a>
</body>
</html>
