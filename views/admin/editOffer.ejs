<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
     body {
    font-family: 'Roboto', sans-serif;
    background-color: #f4f6f9;
    margin: 0;
    padding: 0;
}

.content-main {
    width: 100%;
    max-width: 800px;
    background: #fff;
    padding: 25px;
    margin: 50px auto; 
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
}

.card {
    background-color: #fff;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    max-width: 800px; /* Adjust width as needed */
    margin: 50px auto; /* Adds space and centers */
}

h2 {
    text-align: center;
    color: #333;
    margin-bottom: 20px;
    font-weight: 700;
}

.form-group {
    margin-bottom: 18px;
}

label {
    display: block;
    font-weight: 500;
    margin-bottom: 6px;
    color: #444;
}

select, input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 15px;
    box-sizing: border-box;
    transition: border 0.3s ease;
}

select:hover, input:hover, select:focus, input:focus {
    border-color: #12712f;
    outline: none;
}

.form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
}

.form-row .form-group {
    flex: 1;
    min-width: 150px;
}

.button {
    width: 40%;
    padding: 12px;
    margin-left: 30%;
    margin-bottom: 20px;
    background: #06672a;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 17px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.button:hover {
    background: #0056b3;
}

.error-message {
    color: red;
    font-size: 12px;
}

@media (max-width: 600px) {
    .card {
        width: 95%;
        margin: 30px auto;
    }

    .form-row {
        flex-direction: column;
        gap: 10px;
    }
}

    </style>
  </head>
<div class="main-content">
    <div class="card">
        <h2 style="margin-bottom: 20px;">Edit Offer</h2>
        
        <form action="/admin/offerEdite/<%=offerFind._id%>" method="post">
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="category" name="category">
                    <option value="<%=offerFind.category%>">Select Category</option>
                    <%category.forEach(category=>{%>
                    <option><%=category.name%></option>
                    <%})%>
                </select>
            </div>    
            <div class="form-row">
                <div class="form-group">
                    <label for="startDate">Start Date</label>
                    <input type="datetime-local" id="startDate" name="startDate" value="<%=offerFind.startDate%>">
                </div>

                <div class="form-group">
                    <label for="endDate">End Date</label>
                    <input type="datetime-local" id="endDate" name="endDate" value="<%=offerFind.endDate%>">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="minPrice">Minimum Price</label>
                    <input type="number" id="minPrice" placeholder="Enter minimum price" name="minPrice" value="<%=offerFind.minPrice%>">
                </div>

                <div class="form-group">
                    <label for="maxPrice">Maximum Price</label>
                    <input type="number" id="maxPrice" placeholder="Enter maximum price" name="maxPrice" value="<%=offerFind.maxPrice%>">
                </div>
            </div>

            <div class="form-row">  
                <div class="form-group">
                    <label for="discount">Discount (%)</label>
                    <input type="number" id="offer" placeholder="Enter discount percentage" min="0" max="100" name="offer" value="<%=offerFind.offer%>">
                </div>
            </div>

            <button type="submit" class="button">Add Offer</button>
        </form>
    </div>
</div>
</body>
</html>