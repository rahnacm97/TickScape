<%- include("../../views/partials/admin/header") %>
<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
}

.main-content1 {
    width: 80%;
    max-width: 800px;
    background: #fff;
    padding: 25px;
    margin: 50px auto; 
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
}
h2 {
    text-align: center;
    color: #333;
    margin-bottom: 15px;
    margin-top: 20px;
    margin-left: 5%;
    font-weight: 700px;
}

.form-group {
  padding:20px 20px;
  margin-bottom: 18px;
}

label {
    display: block;
    font-weight: bold;
    margin-bottom: 6px;
    color: #444;
}

select, input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 15px;
    box-sizing: border-box;
    transition: border 0.3s ease;
}

select:hover, input:hover, select:focus, input:focus {
    border-color: #075118;
    outline: none;
}

.form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
}

.form-row .form-group {
    flex: 1;
    min-width: 150px; 
}

.button {
    width: 40%;
    padding: 12px;
    margin-left: 30%;
    margin-bottom: 20px;
    background: #0e6d25;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 17px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.button:hover {
    background: #218838;
}

@media (max-width: 600px) {
    .main-content1 {
        width: 95%;
        margin: 30px auto;
    }

    .form-row {
        flex-direction: column;
        gap: 10px;
    }
}

</style>

<body>
 
  <div class="main-content1">
    <h2>Add New Offer</h2>
      <div class="card">         
          <form action="/admin/offerAdd" method="post">
              <div class="form-group">
                  <label for="category">Category:</label>
                  <select id="category" name="category">
                      <option>Select Category</option>
                      <%category.forEach(category=>{%>
                      <option><%=category.name%></option>
                      <%})%>
                  </select>
              </div>    
  
              <div class="form-row">
                  <div class="form-group">
                      <label for="startDate">Start Date</label>
                      <input type="datetime-local" id="startDate" name="startDate">
                  </div>
  
                  <div class="form-group">
                      <label for="endDate">End Date</label>
                      <input type="datetime-local" id="endDate" name="endDate">
                  </div>
              </div>
  
              <div class="form-row">
                  <div class="form-group">
                      <label for="minPrice">Minimum Price</label>
                      <input type="number" id="minPrice" placeholder="Enter minimum price" name="minPrice">
                  </div>
  
                  <div class="form-group">
                      <label for="maxPrice">Maximum Price</label>
                      <input type="number" id="maxPrice" placeholder="Enter maximum price" name="maxPrice">
                  </div>
              </div>
  
              <div class="form-row">  
                  <div class="form-group">
                      <label for="discount">Discount (%)</label>
                      <input type="number" id="offer" placeholder="Enter discount percentage" min="0" max="100" name="offer">
                  </div>
              </div>
  
              <button type="submit" class="button">Add Offer</button>
          </form>
      </div>
  </div> 
</body>
  