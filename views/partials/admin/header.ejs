<script>
document.addEventListener("DOMContentLoaded", function () {
    let menuItems = document.querySelectorAll(".menu-item a");
    let currentPath = window.location.pathname;

    // Retrieve stored active menu item from sessionStorage
    let activeMenu = sessionStorage.getItem("activeMenu");

    menuItems.forEach(item => {
        let itemPath = item.getAttribute("href");

        // Check if current path matches or was previously stored
        if (currentPath === itemPath || (activeMenu && activeMenu === itemPath)) {
            item.parentElement.classList.add("active");
            sessionStorage.setItem("activeMenu", itemPath); // Store active menu
        } else {
            item.parentElement.classList.remove("active");
        }

        // Add event listener to each menu item for setting active state on click
        item.addEventListener("click", function () {
            sessionStorage.setItem("activeMenu", itemPath);
        });
    });
});

</script>