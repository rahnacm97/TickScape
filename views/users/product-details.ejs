<script>

function addToWishlist(productId) {
   $.ajax({
      url: '/addToWishlist',
      method: 'POST',
      data: { productId: productId },
      success: (response) => {
         console.log(response);
         if (response.status) {
            Swal.fire({
               title: 'Added to Wishlist',
               text: 'The product has been added to your wishlist',
               icon: 'success',
               timer: 2000,
               showConfirmButton: true,
               customClass: {
                  popup: 'swal-popup-custom', 
                  confirmButton: 'swal-btn-confirm'
               }
            });
         } else {
            Swal.fire({
               title: 'Already in Wishlist',
               text: response.message,
               icon: 'info',
               timer: 2000,
               showConfirmButton: true,
               customClass: {
                  popup: 'swal-popup-custom', 
                  confirmButton: 'swal-btn-confirm'
               }
            });
         }
      },
      error: (error) => {
         Swal.fire({
            title: 'Error',
            text: 'There was an error adding wishlist',
            icon: 'error',
            timer: 2000,
            showConfirmButton: true,
               customClass: {
                  popup: 'swal-popup-custom', 
                  confirmButton: 'swal-btn-confirm'
               }
         });
      }
   });
}

function addToCart(productId) {
   $.ajax({
      url: '/addToCart',
      method: 'POST',
      data: { productId: productId },
      success: (response) => {
         console.log("response is", response);
         if (response.status) {
            Swal.fire({
               title: 'Added to Cart',
               text: response.message || 'The product has been added to your cart.',
               icon: 'success',
               timer: 2000,
               showConfirmButton: true,
               showCancelButton: true,
               confirmButtonText: 'Go to Cart',
               cancelButtonText: 'Okay!',
               customClass: {
                  popup: 'swal-popup-custom',  
                  confirmButton: 'swal-btn-custom',
                  cancelButton: 'swal-btn-custom1'
               }
            }).then((result) => {
               if (result.isConfirmed) {
                  window.location.href = '/cart';
               }
            });
         } else {
            Swal.fire({
               title: 'Already in Cart',
               text: response.message || 'This product is already in your cart.',
               icon: 'info',
               timer:2000,
               showConfirmButton: true,
               customClass: {
                  popup: 'swal-popup-custom', 
                  confirmButton: 'swal-btn-confirm'
               }
            });
         }
      },
      error: (error) => {
         Swal.fire({
            title: 'Error',
            text: 'There was an error adding cart',
            icon: 'error',
            timer: 2000,
            showConfirmButton: true,
               customClass: {
                  popup: 'swal-popup-custom', 
                  confirmButton: 'swal-btn-confirm'
               }
         });
      }
   });
}
</script>

