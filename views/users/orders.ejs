<%- include("../../views/partials/user/header") %>
<style>
    /* General Styling */
body {
  font-family: Arial, sans-serif;
  color: #333;
}

.card-body {
  background-color: #ffffff;
  padding: 30px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.content-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
}

.order-info-wrap {
  background-color: #f1f8ff;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 30px;
}

.order-info-wrap .icontext {
  display: flex;
  align-items: center;
}

.order-info-wrap .icontext .icon {
  background-color: #f3f6f9;
  padding: 15px;
  border-radius: 50%;
  margin-right: 15px;
}

.order-info-wrap .icontext .text h6 {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.order-info-wrap .icontext .text p {
  color: #777;
}

.table-responsive {
  margin-top: 20px;
}

.table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 30px;
}

.table th,
.table td {
  padding: 12px;
  text-align: center;
  border: 1px solid #ddd;
}

.table th {
  background-color: #f8f9fa;
  font-weight: bold;
}

.table tbody tr:nth-child(odd) {
  background-color: #f9f9f9;
}

.table .action a {
  color: #dc3545;
  text-decoration: none;
}

.table .action a:hover {
  color: #bd2130;
}

.btn1 {
  background-color: #0e944f;
  color: white;
  padding: 8px 16px;
  border-radius: 4px;
  text-decoration: none;
}

.btn1:hover {
  background-color: #03490f;
  color: white;

}

.success-message {
  background-color: #e7f9e7;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 30px;
  text-align: center;
  font-size: 18px;
  color: #28a745;
}

.order-info p {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 5px;
}

@media (max-width: 768px) {
  .order-info-wrap {
    padding: 15px;
  }

  .table-responsive {
    margin-top: 10px;
  }

  .table td,
  .table th {
    padding: 8px;
  }

  .btn {
    padding: 6px 12px;
  }
}

  .page-header.breadcrumb-wrap {
    margin-top: 10px;
    background-color: #ede9ec;
    padding: 10px 0;
  }

  .breadcrumb-wrap {
    padding: 15px 0;
    background-color: #1e918b;
    color: #fff;
  }

  .breadcrumb a {
    color: #088178;
    text-decoration: none;
  }

  .breadcrumb span {
    margin: 0 5px;
    color: rgb(125, 124, 124);
  }
</style>
<main>
    <section class="content-main mb-40">
      <div class="page-header breadcrumb-wrap">
        <div class="container">
          <div class="breadcrumb">
            <a href="/" rel="nofollow">Home</a>
            <span></span> <a href="/shop" rel="nofollow">Shop</a> <span></span>
            <a href="/cart" rel="nofollow">Cart</a> <span></span>
            Order Details
          </div>
        </div>
      </div>
  
      <div class="container content-header">
        <div class="mt-20">
          <h2 class="content-title card-title">Order Preview</h2>
          <p></p>
          <!-- Success Message -->
          <div class="success-message">
            <p>Your order has been successfully placed!</p>
          </div>
        </div>
      </div>
  
      <div class="container card-body">
        <!-- Customer Information -->
        <div class="row mb-10 mt-10 order-info-wrap background-info">
          <div class="col-md-4">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="material-icons text-primary person"></i>
              </span>
              <div class="text">
                <h6 class="mb-1">Customer</h6>
                <p><%= orders.address.name %></p>
                <!-- <p><%= orders.address.phone %>, <%= orders.address.altPhone %></p> -->
              </div>
            </article>
          </div>
          <!-- Order Information -->
          <div class="col-md-4">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="text-primary material-icons md-local_shipping"></i>
              </span>
              <div class="text">
                <h6 class="mb-1">Order info</h6>
                <p class="mb-1">
                  Pay method: <%= orders.paymentMethod %><br />
                  Status: <%= orders.status %><br />
                  Shipping Charge: $<%= orders.shipping %><br />
                  Discount: $<%= orders.discount %><br />
                  Grand Total: $<%= orders.grandTotal %>
                </p>
              </div>
            </article>
          </div>
          <!-- Delivery Information -->
          <div class="col-md-4">
            <article class="icontext align-items-start">
              <span class="icon icon-sm rounded-circle bg-primary-light">
                <i class="text-primary material-icons md-place"></i>
              </span>
              <div class="text">
                <h4 class="mb-1">Deliver to</h4>
                <p class="mb-1">
                  <div>
                    <p><strong><%= orders.address.addressType %></strong></p>
                    <p><%= orders.address.name %>, <%= orders.address.city %>, <%= orders.address.state %>, 
                       <%= orders.address.landMark %> Pincode: <%= orders.address.pincode %> <br />
                    Phone: <%= orders.address.phone %>, <%= orders.address.altPhone %>
                    </p>
                  </div>
                </p>
                <a href="/downloadInvoice/" class="btn1 btn-sm">Download Invoice</a>
              </div>
            </article>
          </div>
        </div>
  
        <!-- Order Details Table -->
        <div class="row">
          <div class="col-lg">
            <div class="table-responsive">
              <table class="table w-100 ">
                <thead>
                  <tr class="text-center">
                    <th>Sl. No</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <!-- <th>Action</th> -->
                  </tr>
                </thead>
                <tbody>
                  <% if (orders.previewOrder && orders.previewOrder.length > 0) { %>
                    <% orders.previewOrder.forEach((order, index) => { %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= order.product.productName %></td>
                        <td>
                          <img src="<%= order.product.productImage[0] %>" style="height: 7rem; width: 7rem" class="img-xs" />
                        </td>
                        <td>$<%= order.price %></td>
                        <td><%= order.quantity %></td>
                        <td>$<%= order.totalPrice %></td>
                        <!-- <td>
                          <a href="#" class="btn btn-sm" onclick="return confirmCancel(this)">
                            <i class="fi-rs-trash"></i> <i class="fa fa-times-circle"></i>Cancel Order
                          </a>
                        </td> -->
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <p>No orders found.</p>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
<script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
