<%- include("../../views/partials/user/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flat-ui/2.3.0/css/flat-ui.min.css" 
    integrity="sha512-6f7HT84a/AplPkpSRSKWqbseRTG4aRrhadjZezYQ0oVk/B+nm/US5KzQkyyOyh0Mn9cyDdChRdS9qaxJRHayww==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>
  
  .mt-10.mb-50 {
    padding: 20px 0;
    background-color: #f1f3f6; 
  }

  .container {
    max-width: 1200px; 
    margin: 0 auto;
  }

  .page-header.breadcrumb-wrap {
    background-color: #fff;
    padding: 10px 0;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);
  }

  .breadcrumb a {
    color: #2874f0; 
    text-decoration: none;
    font-weight: 500;
  }

  .breadcrumb span {
    margin: 0 5px;
    color: #878787;
  }

 
  .shopping-summery {
    width: 100%;
    background-color: #fff;
    border: none;
    border-radius: 0;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1); 
    margin-bottom: 20px;
  }

  .shopping-summery thead {
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
  }

  .shopping-summery th {
    padding: 12px 15px;
    font-weight: 700;
    color: #212121;
    text-transform: capitalize;
    font-size: 14px;
    border: none;
    text-align: left;
  }

  .shopping-summery td {
    padding: 20px 15px;
    vertical-align: middle;
    border-bottom: 1px solid #e0e0e0;
    text-align: left;
  }

  .product-thumbnail img {
    width: 100px;
    height: 100px;
    object-fit: contain; 
    border-radius: 4px;
    transition: transform 0.2s ease;
  }

  .product-thumbnail img:hover {
    transform: scale(1.03);
  }

  .product-name a {
    color: #212121;
    font-weight: 500;
    font-size: 16px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .product-name a:hover {
    color: #2874f0;
  }

  .font-xxs {
    font-size: 12px;
    color: #878787; 
    margin-top: 5px;
    line-height: 1.4;
  }

  
  .price span {
    font-weight: 700;
    color: #212121;
    font-size: 18px;
  }


  .btn-sm {
    padding: 10px 20px;
    background-color: #fb641b; 
    border: none;
    color: #fff;
    border-radius: 2px;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    transition: background-color 0.2s ease;
    display: inline-block;
  }

  .btn-sm:hover {
    background-color: #f44400; 
    color: #fff;
  }

  .action .btn-sm {
    background-color: rgb(244, 236, 235);
    color: #878787;
    font-size: 16px;
    padding: 5px;
    text-transform: none;
  }

  .action .btn-sm:hover {
    color: #f44400; 
    background-color: transparent;
  }

  .action .btn-sm i {
    font-size: 18px;
  }

  .text-center .lead {
    padding: 40px 0;
    color: #878787;
    font-size: 18px;
    font-weight: 500;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
    padding: 10px 0;
    background: #fff;
  }

  .pagination a {
    padding: 8px 14px;
    background-color: #fff;
    color: #2874f0;
    text-decoration: none;
    border: 1px solid #e0e0e0;
    border-radius: 2px;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .pagination a:hover {
    background-color: #2874f0;
    color: #fff;
    border-color: #2874f0;
  }

  .pagination .active {
    background-color: #2874f0;
    color: #fff;
    border-color: #2874f0;
  }

  @media (max-width: 768px) {
    .shopping-summery td {
      padding: 15px 10px;
    }

    .product-thumbnail img {
      width: 80px;
      height: 80px;
    }

    .btn-sm {
      padding: 8px 15px;
      font-size: 12px;
    }
  }

  @media (max-width: 576px) {
    .shopping-summery thead {
      display: none;
    }

    .shopping-summery, 
    .shopping-summery tbody, 
    .shopping-summery tr, 
    .shopping-summery td {
      display: block;
      width: 100%;
    }

    .shopping-summery tr {
      margin-bottom: 15px;
      padding: 10px;
      border: 1px solid #e0e0e0;
      border-radius: 4px;
      background: #fff;
    }

    .shopping-summery td {
      padding: 10px;
      position: relative;
      border: none;
    }

    .shopping-summery td:before {
      content: attr(data-title);
      font-weight: 700;
      color: #212121;
      font-size: 12px;
      margin-bottom: 5px;
      display: block;
    }

    .product-thumbnail img {
      width: 60px;
      height: 60px;
    }

    .product-name a {
      font-size: 14px;
    }

    .price span {
      font-size: 16px;
    }
  }
</style>

  <div class="page-header breadcrumb-wrap mt-4">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span><a href="/shop" rel="nofollow">Shop</a>
        <span></span> My Wishlist
      </div>
    </div>
  </div>

  <section class="mt-10 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12 products">
          <div class="table-responsive">
            <table class="table shopping-summery text-center clean">
              <thead>
                <tr class="main-heading">
                  <th scope="col">Sl. No</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Add to Cart</th>
                  <th scope="col">Remove</th>
                </tr>
              </thead>
              <tbody>
                <% if(wishlist.length > 0){ %>
                  <% wishlist.forEach((product, index) => { %>
                    <tr id="wishlist-item-<%= product._id %>">
                      <td class="py-5" data-title="Sl. No"><%= index + 1 %></td>
                      <td class="image product-thumbnail" data-title="Image">
                        <img src="<%= product.productImage[0] %>" />
                      </td>
                      <td class="product-des product-name py-4" data-title="Name">
                        <p class="product-name">
                          <a href=""><%= product.productName %></a>
                        </p>
                        <p class="font-xxs">
                          <%= product.category.name %> <br/>
                          <% if (product.brand && product.brand.brandName) { %>
                            <span>Brand: <%= product.brand.brandName %></span>
                          <% } %>
                        </p>
                      </td>
                      <td class="price py-5" data-title="Price">â‚¹<span><%= product.salePrice %></span></td>
                      <td class="text-center py-5 px-4" data-title="Add to Cart">
                        <a href="#" onclick="addToCart('<%= product._id %>')" class="btn btn-sm">Add to Cart</a>
                      </td>
                      <td class="action py-5" data-title="Remove">
                        <a class="btn btn-sm" href="#" onclick="confirmRemove('<%= product._id %>')">
                          <i class="fi-rs-trash"></i>
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="6" class="text-center">
                      <p class="lead mb-4">No items found in the Wishlist</p>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="/wishlist?page=<%= currentPage - 1 %>">Prev</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a class="<%= currentPage === i ? 'active' : '' %>" href="/wishlist?page=<%= i %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <a href="/wishlist?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
    </div>
  </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  function addToCart(productId) {
    $.ajax({
      url: '/addToCart',
      method: 'POST',
      data: { productId: productId },
      success: (response) => {
        console.log("response is", response);
        if (response.status) {
          Swal.fire({
            title: 'Added to Cart',
            text: response.message || 'The product has been added to your cart.',
            icon: 'success',
            timer: 2000,
            showCancelButton: true,
            confirmButtonText: 'Go to Cart',
            cancelButtonText: 'Okay!',
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = '/cart';
            }
          });
        } else {
          Swal.fire({
            title: 'Already in Cart',
            text: response.message || 'This product is already in your cart.',
            icon: 'info',
            timer: 2000,
          });
        }
      },
      error: (xhr) => {
        const errorResponse = xhr.responseJSON || {};
        const errorMessage = errorResponse.error || errorResponse.message || 'There was an error adding to cart';
        Swal.fire({
          title: 'Error',
          text: errorMessage,
          icon: 'error',
          timer: 2000,
        });
      }
    });
  }

  function confirmRemove(productId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
      if (result.isConfirmed) {
        fetch(`/removeFromWishlist?productId=${productId}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' }
        })
        .then(response => response.json())
        .then(data => {
          if (data.error) {
            Swal.fire('Error', data.error, 'error');
          } else {
            const wishlistItem = document.getElementById(`wishlist-item-${productId}`);
            if (wishlistItem) {
              wishlistItem.remove();
            }

            const wishlistTableBody = document.querySelector("tbody");
            if (!wishlistTableBody.querySelector("tr[id^='wishlist-item-']")) {
              wishlistTableBody.innerHTML = `
                <tr>
                  <td colspan="6" class="text-center">
                    <p class="lead mb-4">No items found in the Wishlist</p>
                  </td>
                </tr>`;
            }

            Swal.fire('Deleted!', 'Product removed from Wishlist.', 'success');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire('Error', 'Failed to remove product.', 'error');
        });
      }
    });
  }
</script>
